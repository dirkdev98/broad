{
  "name": "nto",
  "version": "0.1.0",
  "description": "Standard library & tools for your new Node project",
  "main": "out/lib/index.js",
  "types": "out/lib/index.d.ts",
  "bin": {
    "nto": "out/nto/index.js"
  },
  "scripts": {
    "build": "ncc build cmd/nto/main.ts -o out/ -e typescript -e @zeit/ncc -e fs-extra",
    "build:prod": "yarn build",
    "nto": "yarn build && ./out/index.js",
    "fmt": "yarn nto fmt",
    "test": "yarn nto test",
    "bench": "yarn nto bench"
  },
  "author": "Dirk de Visser <dirkdev98@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/fs-extra": "8.0.0",
    "@types/node": "12.6.8",
    "@types/prettier": "1.18.0",
    "prettier": "1.18.2"
  },
  "dependencies": {
    "@zeit/ncc": "0.20.4",
    "typescript": "3.5.3",
    "fs-extra": "8.1.0"
  },
  "sideEffects": false,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/dirkdev98/nto.git"
  },
  "keywords": [
    "build",
    "test",
    "benchmark",
    "format",
    "prettier",
    "stdlib",
    "nto",
    "standard-library",
    "standard"
  ],
  "files": [
    "out/**/*.*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ]
}
